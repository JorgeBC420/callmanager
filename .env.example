# ========== SERVIDOR ==========
# Host donde escucha el servidor
CALLMANAGER_HOST=0.0.0.0

# Puerto del servidor
CALLMANAGER_PORT=5000

# Ambiente: development o production
FLASK_ENV=production

# ========== SECRETOS (CAMBIAR ANTES DE PRODUCCIÓN) ==========
# API Key para autenticación - GENERAR UNA NUEVA EN PRODUCCIÓN
# Recomendación: usar UUID v4 o bcrypt
CALLMANAGER_API_KEY=dev-key-change-in-production

# Secret key para Flask sessions - GENERAR UNA NUEVA EN PRODUCCIÓN
# Recomendación: import secrets; secrets.token_urlsafe(32)
CALLMANAGER_SECRET_KEY=dev-secret-change-in-production

# ========== BASE DE DATOS ==========
# Ruta de la base de datos SQLite (relativa o absoluta)
DATABASE_PATH=./contacts.db

# Ruta para almacenar backups automáticos
BACKUP_DIR=./backups

# Intervalo de backup en minutos
BACKUP_INTERVAL_MINUTES=30

# Días de retención para backups
BACKUP_KEEP_DAYS=7

# ========== LOGGING ==========
# Nivel de log: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Ruta del archivo de log
LOG_FILE=./callmanager.log

# ========== AUTENTICACIÓN ==========
# Activar validación de API Key
ENABLE_AUTH=true

# ========== LOCKS DE CONTACTOS ==========
# Duración por defecto del bloqueo en minutos
DEFAULT_LOCK_DURATION_MINUTES=10

# Duración máxima de un bloqueo en minutos
MAX_LOCK_DURATION_MINUTES=60

# Intervalo de limpieza de locks vencidos en segundos
CLEANUP_INTERVAL_SECONDS=300

# ========== SOCKET.IO ==========
# Modo asíncrono: eventlet, gevent, threading
SOCKETIO_ASYNC_MODE=eventlet

# CORS - Qué orígenes permitir (usar específico en producción, no "*")
# Ejemplo: http://localhost:3000,http://192.168.1.5:5000
SOCKETIO_CORS_ORIGINS=*

# ========== CLIENTE ==========
# URL del servidor (desde la perspectiva del cliente)
CALLMANAGER_SERVER_URL=http://127.0.0.1:5000

# Ancho de ventana cliente en píxeles
CLIENT_WINDOW_WIDTH=1000

# Alto de ventana cliente en píxeles
CLIENT_WINDOW_HEIGHT=700

# ========== INTERPHONE (Windows Automation) ==========
# Timeout para operaciones de InterPhone en segundos
INTERPHONE_CALL_TIMEOUT_SECONDS=5

# ========== RATE LIMITING (OPCIONAL) ==========
# Límite global de solicitudes por hora
RATE_LIMIT_PER_HOUR=1000

# Límite de solicitudes POST /import por minuto
IMPORT_RATE_LIMIT_PER_MINUTE=10

# ========== OPCIONES AVANZADAS ==========
# Pool de conexiones SQLite - Número de conexiones simultáneas
DB_POOL_SIZE=10

# Conexiones extras que pueden crearse si se alcanza pool_size
DB_MAX_OVERFLOW=20

# Timeout en segundos para operaciones de base de datos
DB_TIMEOUT_SECONDS=30

# ========== HTTPS (SOLO PRODUCCIÓN) ==========
# Si no está vacío, activa SSL
# Valores: "adhoc" (auto), ruta a .pem, o "none"
SSL_CONTEXT=none

# ========== MONITOREO (OPCIONAL) ==========
# Habilitar endpoint de health check
ENABLE_HEALTH_CHECK=true

# Habilitar metrics endpoint
ENABLE_METRICS=true
